.page-header
  %h1 Register!
.row
  .span8.offset3
    = form_for @user do |f|
      %fieldset
        - if @user.errors.any?
          .error_messages
            %h2 Form is invalid
            %ul
              - for message in @user.errors.full_messages
                %li= message
        .clearfix
          = f.label :username
          .input= f.text_field :username
        .clearfix
          = f.label :password
          .input= f.password_field :password
        .clearfix
          = f.label :password_confirmation
          .input= f.password_field :password_confirmation
        .actions= f.submit class: "btn primary"
